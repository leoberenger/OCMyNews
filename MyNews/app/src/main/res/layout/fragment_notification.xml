<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:id="@+id/fragment_notification_relative_layout">

    <!-- Import Search Query -->
    <include layout="@layout/search_query"
        android:id="@+id/fragment_notification_query"/>

    <!-- Import Search Desk -->
    <include
        android:id="@+id/fragment_notification_desk"
        layout="@layout/search_desk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_notification_query" />

    <View style="@style/Divider"
        android:layout_below="@+id/fragment_notification_desk"
        android:id="@+id/fragment_notification_divider"/>

    <Switch
        android:id="@+id/fragment_notification_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_notification_divider"
        android:text="Enable notifications (once per day)" />



</RelativeLayout>