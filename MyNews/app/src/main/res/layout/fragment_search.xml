<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:id="@+id/activity_search_root_layout"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Controllers.Activities.SearchActivity">

    <!-- Import Search Query -->
    <include layout="@layout/search_query"
        android:id="@+id/activity_search_query_input"/>

    <LinearLayout
        android:id="@+id/search_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/activity_search_query_input">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Begin Date"/>

            <EditText
                android:id="@+id/search_begin_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="15dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date"/>

        <EditText
            android:id="@+id/search_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>


    </LinearLayout>

    <!-- Import Search Desk -->
    <include layout="@layout/search_desk"
        android:id="@+id/fragment_search_desk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/search_date_layout"/>

    <Button
        android:id="@+id/activity_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="15dip"
        android:text="Search"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_below="@id/fragment_search_desk"/>

</RelativeLayout>